#!/bin/bash
echo "The backup made before installation will now be restored..."
set -e
cd "/"
echo "Restoring files from /Library/Application Support/ClassicAppleBoot..."
mv -f "/Library/Application Support/ClassicAppleBoot/apple-logo-black-n84@2x~iphone.png" "/System/Library/PrivateFrameworks/ProgressUI.framework/" || echo "Failed to restore backup!"
mv -f "/Library/Application Support/ClassicAppleBoot/apple-logo-black@2x~iphone.png" "/System/Library/PrivateFrameworks/ProgressUI.framework/" || echo "Failed to restore backup!"
echo "Removing backup folder..."
rmdir "/Library/Application Support/ClassicAppleBoot/" || set -e && echo "Failed to remove directory!"
echo "Finished restoring the backup!"